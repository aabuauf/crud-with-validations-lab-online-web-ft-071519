<h1>Songs#edit</h1>
<p>Find me in app/views/songs/edit.html.erb</p>
<h2>Editing "<%= @song.title %>"</h2>

<%= form_tag song_path(@song), method: "patch" do%>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
    <%= label_tag "song_title", "Title" %>
    <%= text_field_tag "song_title", @song.title  %>
  </div>

 <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
    <%= label_tag "song_released", "Released" %>
    <%= check_box_tag "song_released", 'yes', true %>
  </div>

 <div class="field<%= ' field_with_errors' if @song.errors[:release_year].any? %>">
    <%= label_tag "song_release_year", "Release Year" %>
    <%= text_field_tag "song_release_year", @song.release_year  %>
  </div>
  
  <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
    <%= label_tag "song_artist_name", "Artist Name" %>
    <%= text_field_tag "song_artist_name", @song.artist_name  %>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
    <%= label_tag "song_genre", "Song Genre" %>
    <%= text_field_tag "song_genre", @song.genre  %>
  </div>




  <%= submit_tag "Update" %>
<% end %>
